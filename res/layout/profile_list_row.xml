<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:padding="5dp" >
	
	<!-- pic -->
	<FrameLayout android:id="@+id/profile_layout"
	    android:layout_width="48dp"
		android:layout_height="48dp" 
		android:layout_marginTop="2dp"
		android:layout_marginLeft="2dp" 
		android:layout_marginBottom="2dp"
		android:layout_marginRight="10dp">
		<ImageView android:id="@+id/imgPic"
			android:layout_width="match_parent" 
			android:layout_height="match_parent" />
		<!-- radius_border 
		<ImageView 
			android:background="@drawable/images_border_radius"
			android:layout_width="match_parent" 
			android:layout_height="match_parent" />
			-->
	</FrameLayout>
	
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content">

		<!-- name -->
		<TextView android:id="@+id/tvName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/ItemImage"
			android:textSize="20dip"
			android:textColor="#000000"
			android:ellipsize="marquee"
			android:singleLine="true" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_below="@+id/tvName"
			android:layout_marginTop="5dp" >
			<ImageView android:id="@+id/imgFlagVolumeOff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_volume_off"
				android:paddingRight="10dp"
				android:visibility="gone" />
			<ImageView android:id="@+id/imgFlagVolumeOn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_volume_on"
				android:paddingRight="10dp"
				android:visibility="gone" />
			<ImageView android:id="@+id/imgFlagVibrator" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_vibrate"
				android:paddingRight="10dp"
				android:visibility="gone" />
			<ImageView android:id="@+id/imgFlagAirplane"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_airplane"
				android:paddingRight="10dp"
				android:visibility="gone" />
			<ImageView android:id="@+id/imgFlagWifi"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_wifi"
				android:paddingRight="10dp"
				android:visibility="gone" />
			<ImageView android:id="@+id/imgFlagBluetooth"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_flag_bluetooth"
				android:paddingRight="10dp"
				android:visibility="gone" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>