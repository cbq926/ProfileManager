<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="3dp" >
	<ImageView android:id="@+id/imgNotif_icon"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:background="@null"
		android:src="@drawable/notif_1_48" />
	<RelativeLayout 
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/imgNotif_icon"
		android:paddingLeft="18dp">
		<TextView android:id="@+id/tvNotif_name"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:textColor="#000000"
			android:textSize="20dip"
			android:text="情景模式名称" />
		<TextView
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvNotif_name"
			android:paddingTop="3dp"
			android:textColor="#393839"
			android:textSize="16dip"
			android:text="(点击修改)" />
	</RelativeLayout>

</RelativeLayout>